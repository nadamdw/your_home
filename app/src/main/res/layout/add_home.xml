<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/background"
    tools:context=".add_homeAct">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajouter votre maison"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_surnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/edit_text"
        android:hint="enter votre surnom"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />
    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/edit_text"
        android:hint="Description"

        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <EditText
        android:id="@+id/editAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/edit_text"
        android:hint="enter votre address exact"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <EditText
        android:id="@+id/addnumtel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/edit_text"
        android:hint="enter votre numero de telephone"

        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <ImageButton
        android:id="@+id/imagecov"
        android:layout_width = "100dp"
        android:layout_height= "100dp"

        app:srcCompat="@drawable/ic_baseline_image_24" />
    <Button
        android:id="@+id/img_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/btn"
        android:paddingHorizontal="20dp"
        android:text="add" />
</LinearLayout>